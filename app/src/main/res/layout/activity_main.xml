<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchit"
        android:hint="Type a Movie Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/srcbt" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mvname"
        android:textSize="50dp"
        android:textColor="#000000"
        android:layout_below="@+id/searchit"
        android:layout_alignParentStart="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/director"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/mvname"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cast"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/director"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genre"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/cast"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reldate"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/genre"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/plot"
        android:textColor="#000000"
        android:layout_below="@+id/reldate"
        android:layout_alignParentStart="true"
         />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:layout_below="@+id/plot"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="@null"
        android:src="@drawable/searchicon"
        android:id="@+id/srcbt"
        android:layout_above="@+id/mvname"
        android:layout_alignParentEnd="true" />
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginBottom="30dp" />



</RelativeLayout>
